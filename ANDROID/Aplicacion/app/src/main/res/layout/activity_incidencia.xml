<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncidenciaActivity"
    android:layout_margin="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDatos"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardElevation="25dp"
        >

        <TextView
            android:id="@+id/txtDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Datos Generales:"/>

        <TextView
            android:id="@+id/txtTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="18dp"
            android:text="Tipo:"/>

        <Spinner
            android:id="@+id/spTipo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/txtSubtipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:textSize="18dp"
            android:text="Subtipo:"/>

        <Spinner
            android:id="@+id/spSubTipo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:spinnerMode="dropdown"
             />

        <Button
            android:id="@+id/btnAdjuntar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Adjunta archivos"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDescripcion"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/cardDatos"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardElevation="25dp"
        >

        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="DescripciÃ³n del problema:"/>
        <EditText
            android:id="@+id/edtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardAdjuntos"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/cardDescripcion"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardElevation="25dp"
        >

        <TextView
            android:id="@+id/txtAdjuntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Adjuntos:"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaAdjuntos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"/>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>